@model SkillSwapApp.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<h1>Delete Review</h1>

<div class="alert alert-danger">
    <strong>⚠️ Warning!</strong> Are you sure you want to delete this review?
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Reviewer</dt>
        <dd class="col-sm-9">
            <strong>@Model.Reviewer?.Username</strong>
        </dd>

        <dt class="col-sm-3">Reviewed User</dt>
        <dd class="col-sm-9">
            <strong>@Model.ReviewedUser?.Username</strong>
        </dd>

        <dt class="col-sm-3">Skill</dt>
        <dd class="col-sm-9">
            <strong>@Model.Skill?.Title</strong>
        </dd>

        <dt class="col-sm-3">Rating</dt>
        <dd class="col-sm-9">
            <span style="font-size: 1.2rem;">
                @for (int i = 1; i <= 5; i++)
                {
                    if (i <= Model.Rating)
                    {
                        <span>⭐</span>
                    }
                    else
                    {
                        <span style="color: #ddd;">☆</span>
                    }
                }
            </span>
            <strong>(@Model.Rating / 5)</strong>
        </dd>

        <dt class="col-sm-3">Comment</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.Comment))
            {
                <div class="alert alert-light">
                    <i>"@Model.Comment"</i>
                </div>
            }
            else
            {
                <span class="text-muted">No comment</span>
            }
        </dd>

        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">
            @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

<style>
    .alert-danger {
        border-left: 4px solid #dc3545;
    }
</style>